        function renderItinerary() {
            const container = document.getElementById('itinerary-container');
            let html = '';
            
            itineraryData.forEach(day => {
                let itemsHtml = '';
                day.items.forEach(item => {
                    let tagsHtml = '';
                    if(item.tags) {
                        item.tags.forEach(tag => {
                            let className = 'tip';
                            if(tag.includes('吃') || tag.includes('牛') || tag.includes('味')) className = 'food';
                            if(tag.includes('買') || tag.includes('購')) className = 'buy';
                            tagsHtml += `<span class="tag ${className}">${tag}</span>`;
                        });
                    }

                    // Google Maps Link Generation
                    const mapUrl = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(item.title + " " + day.location)}`;

                    itemsHtml += `
                        <div class="timeline-item">
                            <div class="time">${item.time}</div>
                            <div class="content">
                                <div class="place-name">${item.title}</div>
                                <div class="tags">${tagsHtml}</div>
                                <div class="place-desc">${item.desc}</div>
                                <a href="${mapUrl}" target="_blank" class="nav-btn">
                                    <i class="fas fa-location-arrow"></i> 導航
                                </a>
                            </div>
                        </div>
                    `;
                });

                html += `
                    <div class="card">
                        <div class="day-header">
                            <div class="day-title">${day.day} ${day.location}</div>
                            <div class="day-date">${day.date}</div>
                        </div>
                        ${itemsHtml}
                    </div>
                `;
            });
            container.innerHTML = html;
        }

        function switchView(viewName, navEl) {
            document.querySelectorAll('.view').forEach(el => el.classList.remove('active'));
            document.getElementById('view-' + viewName).classList.add('active');
            
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
            navEl.classList.add('active');
        }

        // Initialize
        renderItinerary();
    </script>
</body>
